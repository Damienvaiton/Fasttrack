<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondnoir"
    tools:context=".view.Fragements.Profil.Login">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/damierHome"
        android:layout_width="wrap_content"
        android:layout_height="83dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/damier4" />

    <TextView
        android:id="@+id/titleAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/leckerli_one"
        android:text="Inscription"
        android:textColor="#FFFFFF"
        android:textSize="42sp" />

    <ImageView
        android:id="@+id/grandRectBlancConnexion"
        android:layout_width="wrap_content"
        android:layout_height="398dp"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/rectblancconnexion"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="217dp" />


    <ImageView
        android:id="@+id/petitRectNoirConnexion"
        android:layout_width="250dp"
        android:layout_height="125dp"
        android:layout_marginHorizontal="46dp"
        android:layout_marginTop="196dp"
        android:src="@drawable/petitrectnoirconnexion"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="217dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="55dp"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/monomaniac"
        android:text="Bienenue sur Fastrack !"
        android:textColor="#FFFFFFFF"
        android:textSize="28sp" />

    <EditText
        android:id="@+id/username"
        android:layout_width="259dp"
        android:layout_height="46dp"
        android:background="@drawable/custom_edit_text"
        android:drawableLeft="@drawable/ic_baseline_person_24_white"
        android:hint="Username"
        android:padding="8dp"
        android:layout_marginTop="340dp"
        android:layout_marginHorizontal="60dp"
        android:paddingHorizontal="10dp"
        android:textColor="@color/white"
        android:textColorHint="#FFFFFF" />

    <EditText
        android:id="@+id/password"
        android:layout_width="259dp"
        android:layout_height="46dp"
        android:background="@drawable/custom_edit_text"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:hint="Password"
        android:padding="8dp"
        android:layout_marginTop="420dp"
        android:layout_marginHorizontal="60dp"
        android:textColor="@color/white"
        android:textColorHint="#FFFFFF"/>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginTop="550dp"
        android:layout_marginHorizontal="60dp"
        android:backgroundTint="#313030"
        android:text="SignUp"
        android:textColor="@color/white"
        android:textSize="22sp"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="498dp"
        tools:ignore="MissingConstraints" />

</FrameLayout>