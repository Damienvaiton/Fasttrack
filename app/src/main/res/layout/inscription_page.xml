<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondnoir"
    tools:context=".view.Fragements.Profil.Signup">

    <ImageView
        android:id="@+id/damierHome"
        android:layout_width="wrap_content"
        android:layout_height="83dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/damier4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/leckerli_one"
        android:text="Inscription"
        android:textColor="#FFFFFF"
        android:textSize="42sp"
        app:layout_constraintBottom_toBottomOf="@+id/damierHome"
        app:layout_constraintEnd_toEndOf="@+id/damierHome"
        app:layout_constraintStart_toStartOf="@+id/damierHome"
        app:layout_constraintTop_toTopOf="@+id/damierHome" />

    <ImageView
        android:id="@+id/fondGp"
        android:layout_width="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:scaleType="fitXY"
        android:src="@drawable/table_layout_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/damierHome"
        app:layout_constraintVertical_bias="0.0"
        android:layout_height="580dp"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="259dp"
        android:layout_height="46dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/custom_edit_text"
        android:drawableStart="@drawable/ic_baseline_person_24_white"
        android:hint="Username"
        android:padding="8dp"
        android:paddingHorizontal="10dp"
        android:textColor="@color/white"
        android:textColorHint="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/lastname"
        app:layout_constraintStart_toStartOf="@+id/fondGp"
        app:layout_constraintEnd_toEndOf="@+id/fondGp"
        tools:layout_editor_absoluteX="76dp" />


    <EditText
        android:id="@+id/password"
        android:layout_width="259dp"
        android:layout_height="46dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/custom_edit_text"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:hint="Password"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textColorHint="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/username"
        app:layout_constraintStart_toStartOf="@+id/fondGp"
        app:layout_constraintEnd_toEndOf="@+id/fondGp"
        tools:layout_editor_absoluteX="76dp" />
    <EditText
        android:id="@+id/lastname"
        android:layout_width="259dp"
        android:layout_height="46dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/custom_edit_text"
        android:hint="Nom"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textColorHint="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/firstname"
        app:layout_constraintStart_toStartOf="@+id/fondGp"
        app:layout_constraintEnd_toEndOf="@+id/fondGp"
        tools:layout_editor_absoluteX="76dp" />

    <EditText
        android:id="@+id/firstname"
        android:layout_width="259dp"
        android:layout_height="46dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/custom_edit_text"
        android:hint="PrÃ©nom"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textColorHint="#FFFFFF"
        app:layout_constraintTop_toTopOf="@+id/fondGp"
        app:layout_constraintStart_toStartOf="@+id/fondGp"
        app:layout_constraintEnd_toEndOf="@+id/fondGp"

        tools:layout_editor_absoluteX="76dp" />

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginHorizontal="60dp"
        android:backgroundTint="#313030"
        android:text="SignUp"
        android:layout_marginTop="96dp"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="@+id/password"
        tools:layout_editor_absoluteX="16dp"
        app:layout_constraintStart_toStartOf="@+id/fondGp"
        app:layout_constraintEnd_toEndOf="@+id/fondGp"
        tools:layout_editor_absoluteY="617dp" />


</androidx.constraintlayout.widget.ConstraintLayout>