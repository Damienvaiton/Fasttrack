<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/fondnoir"
tools:context=".view.Fragements.Profil.Login">

<!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/damierHome"
        android:layout_width="wrap_content"
        android:layout_height="83dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/damier4" />

    <TextView
        android:id="@+id/titleAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/leckerli_one"
        android:text="Connexion"
        android:textColor="#FFFFFF"
        android:textSize="42sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/monomaniac"
        android:text="Content de vous revoir !"
        android:textColor="#FFFFFFFF"
        android:textSize="38sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="E-mail"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginTop="260dp"
        android:layout_marginHorizontal="65dp"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_background"
        android:ems="10"
        android:hint="Enter your e-mail"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:textCoLor="#707070"
        android:textSize="18sp"
        android:layout_marginTop="295dp"
        android:layout_marginHorizontal="60dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginTop="370dp"
        android:layout_marginHorizontal="65dp"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_background"
        android:ems="10"
        android:hint="Enter your password"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:textCoLor="#707070"
        android:textSize="18sp"
        android:layout_marginTop="405dp"
        android:layout_marginHorizontal="60dp"/>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginTop="550dp"
        android:layout_marginHorizontal="60dp"
        android:backgroundTint="#313030"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="22sp"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="498dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/signupbtn"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="610dp"
        android:backgroundTint="#313030"
        android:text="Signup"
        android:textColor="@color/white"
        android:textSize="22sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="498dp" />

</FrameLayout>