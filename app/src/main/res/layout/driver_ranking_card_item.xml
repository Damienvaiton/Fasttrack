<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardRankingQatar"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    app:cardElevation="0dp"
    android:backgroundTint="@color/clear"
    app:cardUseCompatPadding="false">

    <ImageView
        android:id="@+id/divRankingPrincipal2"
        android:layout_width="356dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"
        android:src="@drawable/fondpilote2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/divRankingPrincipal"
        app:tint="@color/red_bull" />

    <ImageView
        android:id="@+id/divRankingPrincipal"
        android:layout_width="356dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"
        android:src="@drawable/fondpilote"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgteam"
        android:layout_width="109dp"
        android:layout_height="66dp"
        android:alpha="0.6"
        android:src="@drawable/red_bull"
        app:layout_constraintBottom_toBottomOf="@+id/divRankingPrincipal2"
        app:layout_constraintEnd_toEndOf="@+id/divRankingPrincipal2"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintStart_toStartOf="@+id/divRankingPrincipal2"
        app:layout_constraintTop_toTopOf="@+id/divRankingPrincipal2" />

    <ImageView
        android:id="@+id/imgdriver"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="bottom"
        android:src="@drawable/max_verstappen"
        app:layout_constraintBottom_toBottomOf="@+id/divRankingPrincipal"
        app:layout_constraintEnd_toEndOf="@+id/divRankingPrincipal2"
        app:layout_constraintTop_toTopOf="@+id/divRankingPrincipal2" />

    <TextView
        android:id="@+id/rankingDriver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/major_mono_display"
        android:text="01"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgteam"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="@+id/divRankingPrincipal"
        app:layout_constraintTop_toBottomOf="@+id/nameConstructorDriver" />

    <TextView
        android:id="@+id/nameDriver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lilita_one"
        android:text="Verstappen"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@+id/divRankingPrincipal2"
        app:layout_constraintEnd_toEndOf="@+id/divRankingPrincipal2"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="@+id/divRankingPrincipal"
        app:layout_constraintTop_toTopOf="@+id/divRankingPrincipal"
        app:layout_constraintVertical_bias="0.07999998" />

    <TextView
        android:id="@+id/nameConstructorDriver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lilita_one"
        android:text="RedBull"
        android:textColor="@color/red_bull"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/nbPointPiloteRanking"
        app:layout_constraintEnd_toStartOf="@+id/imgteam"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="@+id/divRankingPrincipal"
        app:layout_constraintTop_toBottomOf="@+id/nameDriver"
        app:layout_constraintVertical_bias="0.100000024" />

    <TextView
        android:id="@+id/nbPointPiloteRanking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/leckerli_one"
        android:text="250 pts"
        android:textColor="@color/red_bull"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgteam"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintStart_toStartOf="@+id/divRankingPrincipal"
        app:layout_constraintTop_toBottomOf="@+id/nameDriver"
        app:layout_constraintVertical_bias="0.76" />

</androidx.constraintlayout.widget.ConstraintLayout>