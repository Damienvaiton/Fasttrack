<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardRankingQatar"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    app:cardElevation="0dp"
    android:backgroundTint="@color/clear"
    app:cardUseCompatPadding="false">

    <ImageView
        android:id="@+id/divRankingPrincipal2"
        android:layout_width="356dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/fondpilote2"
        app:tint="@color/red_bull" />

    <ImageView
        android:id="@+id/divRankingPrincipal"
        android:layout_width="356dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/fondpilote"/>

    <ImageView
        android:id="@+id/imgteam"
        android:layout_width="109dp"
        android:layout_height="66dp"
        android:layout_marginLeft="205dp"
        android:layout_marginTop="43dp"
        android:alpha="0.6"
        android:src="@drawable/red_bull" />

    <ImageView
        android:id="@+id/imgdriver"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="240dp"
        android:layout_marginBottom="21dp"
        android:src="@drawable/max_verstappen" />

    <TextView
        android:id="@+id/rankingDriver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="81dp"
        android:fontFamily="@font/major_mono_display"
        android:text="01"
        android:textColor="#FFFFFF"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/nameDriver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/lilita_one"
        android:text="Verstappen"
        android:textColor="#FFFFFF"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/nameConstructorDriver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:layout_marginTop="43dp"
        android:fontFamily="@font/lilita_one"
        android:text="RedBull"
        android:textColor="@color/red_bull"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/nbPointPiloteRanking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="103dp"
        android:fontFamily="@font/leckerli_one"
        android:text="250 pts"
        android:textColor="@color/red_bull"
        android:textSize="20sp" />

</androidx.cardview.widget.CardView>