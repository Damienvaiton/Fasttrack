<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondnoir"
    tools:context=".View.Ranking">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/damierHome"
        android:layout_width="wrap_content"
        android:layout_height="83dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/damier4" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/leckerli_one"
        android:text="Classement"
        android:textColor="#FFFFFF"
        android:textSize="42sp" />


    <Button
        android:id="@+id/submitDriver"
        android:layout_width="90dp"
        android:layout_height="57dp"
        android:layout_marginTop="150dp"
        android:layout_gravity="end"
        android:layout_marginRight="90dp"
        android:backgroundTint="#313030"
        android:drawableTop="@drawable/baseline_directions_car_24"
        android:textColor="@color/white"
        android:textSize="22sp"/>

    <Button
        android:id="@+id/submitTeam"
        android:layout_width="90dp"
        android:layout_height="57dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="90dp"
        android:drawableTop="@drawable/ic_baseline_person_24_white"
        android:backgroundTint="#313030"
        android:textColor="@color/white"
        android:textSize="22sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRanking"
        android:layout_width="match_parent"
        android:layout_height="495dp"
        android:layout_marginTop="230dp"
        tools:listitem="@layout/ranking_card_item"/>

</FrameLayout>